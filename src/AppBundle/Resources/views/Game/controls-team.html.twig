<div class="col-sm-4 btn-group-vertical float-left team" role="group" data-team_id="{{ team.id }}">
    <div class="row mb-3">
        <div class="col-sm-12">
            <h2>{{ team.name }} <span class="badge badge-secondary span-team-score">{{ score }}</span></h2>
            <h3>
                Fouls <span class="badge badge-secondary span-team-fouls">1</span>
            </h3>
        </div>
    </div>
    <div class="row mt-1">
        <div class="col-sm-4">
            <button type="button" class="btn btn-primary btn-add-points" data-points="3">+3 Points</button>
        </div>
        <div class="col-sm-4">
            <button type="button" class="btn btn-primary btn-add-points" data-points="2">+2 Points</button>
        </div>
        <div class="col-sm-4">
            <button type="button" class="btn btn-primary btn-add-points" data-points="1">+1 Point</button>
        </div>
    </div>
    <div class="row mt-1">
        <div class="col-sm-12">
            <button type="button" class="btn btn-danger btn-minus-points" data-points="1">Cancel Last Action</button>
        </div>
    </div>
    <div class="row mt-5">
        <input type="number" class="form-control text-score-input">
        <button type="button" class="btn btn-outline-primary btn-set-score">Set Score</button>
    </div>
    
</div>
